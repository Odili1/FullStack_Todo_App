<%-include('partials/header')-%>

<% if (message) {%>
    
    <div class="alert alert-dark alert-dismissible fade show position-absolute w-100" role="alert">
        <%=message%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="container mt-5">
    <!-- <img src="./../public/images/MarketSplash-PROGRAMMING-2-Cover-19-19.jpg" alt=""> -->
    <form class="w-50 mx-auto shadow p-4 mb-4 bg-white rounded p-5" action="/user/login" method="post">

        <h2 class="mb-4">Login</h2>
        
        <div class="mb-3 mt-3">
          <label for="username" class="form-label">Username:</label>
          <input type="text" class="form-control" id="username" placeholder="Enter Username" name="username">
        </div>
    
        <div class="mb-3">
          <label for="pwd" class="form-label">Password:</label>
          <input type="password" class="form-control" id="password" placeholder="Enter Password" name="password">
        </div>
    
        <div class="form-check mb-3">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox" name="remember"> Remember me
          </label>
        </div>
    
        <div class=" mb-3">
            Don't have an account? 
            <a class="text-decoration-none ms-2" href="/signup">Signup</a>
        </div>
        <button type="submit" class="btn btn-primary ">Submit</button>
    </form>
</div>

<%-include('partials/footer')-%>
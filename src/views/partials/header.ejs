<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

    <link rel="stylesheet" href="./../../public/index.css" type="text/css">

    <title>HipoKampus</title>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz,wght@6..12,200&family=Playpen+Sans:wght@400&display=swap');

        *{
            font-family: 'Nunito Sans', sans-serif;
            font-family: 'Playpen Sans', cursive;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        a .navlink{
            text-decoration: none;
            color: white;
        }

        @media only screen and (max-width: 600px) {
            form .width75{
                background-color: aqua;
                width: 70%;
            }
        }

        @media (min-width: 600px) {
            form .width75{
                width: 50%;
            }
        }
    </style>
  </head>
<body class="vh-100">
    <header class="bg-white d-flex justify-content-between py-3 px-3 shadow rounded">
        <div class="h-100 ">
            <a class="navbar-brand text-primary fs-1 navlink" href="/">HipoKampus</a>
        </div>
        <nav class="navbar navbar-expand-sm navbar">
            <div class="container">
                <button class="navbar-toggler ms-auto mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#n_bar" aria-controls="navbarNavAltMarkup" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="n_bar">
                    <ul class="navbar-nav  justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-black navlink fs-4" href="/user/dashboard">Dashboard</a>
                        </li>
                       <% if (user || false) { %>
                            <li class="nav-item ms-3">
                                <a class="nav-link text-black navlink fs-4" href="/user/stats">Stats</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link text-black navlink fs-4 " href="/user/logout">Logout</a>
                            </li>
                       <% } else { %>
                            <li class="nav-item ms-3">
                                <a class="nav-link text-black navlink fs-4" href="/signup">SignUp</a>
                              </li>
                              <li class="nav-item ms-3">
                                <button class="btn border border-black rounded-5"><a class="nav-link text-black navlink fs-6 " href="/login">Get Started</a></button>
                            </li>
                       <% } %>
                      </ul>
                </div>
            </div>
        </nav>
        
    </header>